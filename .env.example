# Example environment configuration file
# Copy this file to .env and fill in your actual values

# API Configuration
RISK_API_BASE_URL=https://your-api-endpoint.com
RISK_API_KEY=your-api-key-here

# Database Configuration (Production)
DB_HOST=your-database-host.com
DB_PORT=5432
DB_NAME=postgres
DB_USER=your-database-user
DB_PASSWORD=your-database-password

# Connection string format
DB_CONNECTION_STRING_SESSION_POOLER=postgresql://username:password@host:port/database

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs

# Optional: Secrets Management
# SECRETS_FILE=~/.daily-profit-model/secrets.enc
# SECRETS_MASTER_KEY=your-master-key-here

# Optional: AWS Configuration (if using CloudWatch)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Optional: Model Registry
# MODEL_REGISTRY_PATH=s3://your-bucket/models
# MLFLOW_TRACKING_URI=http://your-mlflow-server:5000